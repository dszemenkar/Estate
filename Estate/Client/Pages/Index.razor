@page "/"

<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="jumbotron">
            <h1 class="display-4">Hej, @context.User.Identity.Name!</h1>
            <p class="lead"></p>
            <hr class="my-4">

            <p class="lead">
                <a class="btn btn-primary btn-sm" href="invoices" role="button">Gå till betalningar</a>
            </p>
        </div>
    </Authorized>
</AuthorizeView>
<AuthorizeView Roles="Tenant">
    <Authorized>
        <div class="jumbotron">
            <h1 class="display-4">Hej, @context.User.Identity.Name!</h1>
            <p class="lead"></p>
            <hr class="my-4">
            <p></p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="myinvoice" role="button">Gå till min hyresavi</a>
            </p>
        </div>
    </Authorized>
</AuthorizeView>
<AuthorizeView>
<NotAuthorized>
    <h3>Logga in</h3>
    <p>Du behöver access för att komma in på denna sidan.</p>
    <Login></Login>
</NotAuthorized>
</AuthorizeView>
